{
  "info": {
    "name": "Job Scheduler API",
    "description": "API collection for Job Scheduler service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "apiKey",
      "value": "your-api-key-here",
      "type": "string"
    }
  ],
  "auth": {
    "type": "apikey",
    "apikey": [
      {
        "key": "key",
        "value": "X-API-Key",
        "type": "string"
      },
      {
        "key": "value",
        "value": "{{apiKey}}",
        "type": "string"
      },
      {
        "key": "in",
        "value": "header",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Jobs",
      "item": [
        {
          "name": "Create Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"schedule\": \"31 10-15 1 * * MON-FRI\",\n  \"api\": \"https://api.example.com/webhook\",\n  \"type\": \"AT_LEAST_ONCE\",\n  \"isRecurring\": true,\n  \"description\": \"Send daily report\",\n  \"maxRetryCount\": 3\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/jobs",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "jobs"]
            }
          },
          "response": []
        },
        {
          "name": "List Jobs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/jobs?limit=100&offset=0",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "jobs"],
              "query": [
                {
                  "key": "limit",
                  "value": "100"
                },
                {
                  "key": "offset",
                  "value": "0"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Job",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/jobs/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "jobs", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Update Job",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"schedule\": \"0 */5 * * * *\",\n  \"description\": \"Updated description\",\n  \"maxRetryCount\": 5\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/jobs/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "jobs", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Delete Job",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/jobs/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "jobs", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Get Job Schedule",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/jobs/1/schedule",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "jobs", "1", "schedule"]
            }
          },
          "response": []
        },
        {
          "name": "Get Job History",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/jobs/1/history?limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "jobs", "1", "history"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
