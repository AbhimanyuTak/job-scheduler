# Environment Variables Example
# Copy this file to .env and modify values as needed
# These variables will override the config.yaml values

# Database Configuration
JOB_SCHEDULER_DATABASE_HOST=localhost
JOB_SCHEDULER_DATABASE_PORT=5432
JOB_SCHEDULER_DATABASE_USER=postgres
JOB_SCHEDULER_DATABASE_PASSWORD=your_password_here
JOB_SCHEDULER_DATABASE_DBNAME=job_scheduler
JOB_SCHEDULER_DATABASE_SSLMODE=disable

# Redis Configuration
JOB_SCHEDULER_REDIS_HOST=localhost
JOB_SCHEDULER_REDIS_PORT=6379
JOB_SCHEDULER_REDIS_PASSWORD=
JOB_SCHEDULER_REDIS_DB=0

# Server Configuration
JOB_SCHEDULER_SERVER_HOST=0.0.0.0
JOB_SCHEDULER_SERVER_PORT=8080
JOB_SCHEDULER_SERVER_MODE=debug

# Scheduler Configuration
JOB_SCHEDULER_SCHEDULER_POLL_INTERVAL=5s
JOB_SCHEDULER_SCHEDULER_BATCH_SIZE=100
JOB_SCHEDULER_SCHEDULER_HTTP_TIMEOUT=30s

# Worker Configuration
JOB_SCHEDULER_WORKER_POOL_SIZE=10
JOB_SCHEDULER_WORKER_HTTP_TIMEOUT=90s
JOB_SCHEDULER_WORKER_RETRY_DELAY=10s
JOB_SCHEDULER_WORKER_MAX_RETRIES=3

# Logging Configuration
JOB_SCHEDULER_LOGGING_LEVEL=info
JOB_SCHEDULER_LOGGING_FORMAT=json